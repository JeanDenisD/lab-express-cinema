
<section id="details-box">
    <div>
        <img src="{{movie.image}}" alt="">
    </div>
    <div>
        <a href="/movies">Go back</a>
        <a href="/movies/{{movie.id}}/edit">Edit</a>
        <br>
        <h2>{{movie.title}}</h2>
        <h3>{{movie.director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <ul class="showtimes">
            {{#each movie.showtimes}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</section>